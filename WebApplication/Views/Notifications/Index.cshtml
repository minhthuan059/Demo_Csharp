@model IEnumerable<WebApplication.Models.Notification>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<button class="btn btn-success"
        onclick="location.href='@Url.Action("Create", "Notifications")'">
    Create New
</button>

<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Message)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedAt)
        </th>
        <th>
            Users
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @if (item.Users != null && item.Users.Any())
                {
                    <ul>
                        @foreach (var user in item.Users)
                        {
                            <li>@user.UserName</li>
                        }
                    </ul>
                }
                else
                {
                    <span class="text-muted">No Users</span>
                }
            </td>
            <td>
                <button class="btn btn-outline-primary btn-sm"
                        onclick="location.href='@Url.Action("Edit", "Notifications", new { id = item.Id })'">
                    Edit
                </button>
                <button class="btn btn-outline-danger btn-sm" onclick="deleteNotification('@item.Id')">Delete</button>
            </td>
        </tr>
    }

</table>
<script>
    async function deleteNotification(id) {
        console.log('Deleting notification with id:', id);  
        if (!confirm('Are you sure you want to delete this notification?')) return;
        try {
            const res = await fetch(`/Notifications/Delete/${id}`, {
                method: 'GET'
            });
            if (res.ok) {
                alert('Deleted successfully');
                location.reload();
            } else {
                alert('Delete failed');
            }
        } catch (error) {
            alert('An error occurred: ' + error.message);
        }
    }
</script>
